<div class="modal fade" id="myModal-{{ user.id }}" tabindex="-1" role="dialog" 
   aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" 
               aria-hidden="true">
            </button>
            <h4 class="modal-title" id="myModalLabel">
               修改员工信息
            </h4>
         </div>
         <div class="modal-body">
          <form class="update-user-{{user.id}}" class="form-horizontal" action="index.php?action=update" method="post">
            <div class="form-group">
              <label>姓名</label>
              <input type="text" class="form-control" name="name" value="{{user.name}}" placeholder="姓名">
            </div>
            <div class="form-group">
              <label>性别</label>
                  男<input class="control-label" type="radio" name="sex" value="男" checked="{{user.sex}}=='男'">
                  女<input class="control-label" type="radio" name="sex" value="女" checked="{{user.sex}}=='女'">
            </div>
            <div class="form-group">
              <label>年龄</label>
                    <input type="number" class="form-control" value="{{user.age}}" name="age" placeholder="年龄">
            </div>
            <div class="form-group">
              <label>简介</label>
                  <textarea class="form-control col-sm-10" name="about">{{user.about}}</textarea>

                <input name="id" type="hidden" value="{{user.id}}">
            </div>
          </form>

         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <button type="button" edit-id="{{user.id}}" class="btn btn-primary update-user-btn">修改</button>
         </div>
      </div>
   </div>
</div>